import logging
logger = logging.getLogger(__name__)

import streamlit as st
from modules.nav import SideBarLinks
from api.backend.db_connection import db

# Set up the page configuration
st.set_page_config(layout="wide")

# Show appropriate sidebar links for the role of the currently logged-in user
SideBarLinks()

# Display Doctor's home page title
st.title(f"Welcome Doctor, {st.session_state['first_name']}.")

# Option to view patient progress
st.write('### What would you like to do today?')

# Display button to view patient's treatment progress
if st.button('View Patient Treatment Progress', type='primary', use_container_width=True):
    st.switch_page('pages/01_Doctor_Treatment_Progress.py')

# Display button to view/update prescriptions for patients
if st.button('View/Update Prescriptions', type='primary', use_container_width=True):
    st.switch_page('pages/02_Doctor_View_Update_Prescriptions.py')

# Display button to view drug interaction alerts
if st.button('View Drug Interaction Alerts', type='primary', use_container_width=True):
    st.switch_page('pages/03_Doctor_Drug_Interactions.py')

# Display button to manage treatment adjustments based on genetic data
if st.button('Manage Treatment Adjustments', type='primary', use_container_width=True):
    st.switch_page('pages/04_Doctor_Treatment_Adjustments.py')
